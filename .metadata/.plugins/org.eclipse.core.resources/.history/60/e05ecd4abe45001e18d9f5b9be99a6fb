package string;

import java.util.Scanner;

public class Test1 
{
	
	
	
	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		
		
		modifyData("Hello",4);
		
		
		
		
		
		
	}

	private static void modifyData(String s, int num) {
		
		int n1;
		char cn;
		StringBuffer sb=new StringBuffer();
		for(int i=0;i<s.length();i++)
		{
			if(num==4)
			{
				char c=s.charAt(i);
				int n=c;
				
				n1=n+4;
				cn=(char) n1;
				
				sb.append(cn);
				
			}
		}
		
	}

}
